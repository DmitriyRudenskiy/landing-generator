{% extends "admin.layout.base" %}

{% block title %}Надписи сайта{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-lg-6 col-md-10">
            <h1>Меню сайта</h1>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-7 col-md-12">

            <form method="post" action="{{ route('admin_title_update') }}">
                <div class="form-group">
                    <label>Meta title</label>
                    <input type="text" name="title_mime" value="{{ list.title_mime }}" class="form-control" required>
                </div>

                <div class="form-group">
                    <label>Заголовок списка товаров (каталога)</label>
                    <input type="text" name="title_product" value="{{ list.title_product }}" class="form-control" required>
                </div>

                <div class="form-group">
                    <label>Надпись на нижней кнопке</label>
                    <input type="text" name="title_down_button" value="{{ list.title_down_button }}" class="form-control" required>
                </div>

                <button type="submit" class="btn btn-primary">Сохранить</button>
            </form>
                </div>
            </div>
{% endblock %}